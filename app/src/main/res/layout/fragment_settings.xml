<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background"
    tools:context=".settings.SettingsFragment">

    <!-- Notification Preference Category -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/category_background"
        android:orientation="vertical">

        <Switch
            android:id="@+id/toggle_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="notification"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/notification_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:text="notification_enabled"
            android:textColor="@color/black"
            android:visibility="gone" />
    </LinearLayout>

    <!-- Language Preference Category -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/category_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_language"
            android:drawablePadding="10dp"
            android:text="@string/select_language"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/language_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/auto" />

            <RadioButton
                android:id="@+id/radio_english"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/english" />

            <RadioButton
                android:id="@+id/radio_spanish"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/arabic" />

            <!-- RadioButtons here -->
        </RadioGroup>
    </LinearLayout>

    <!-- Temperature Unit Preference Category -->

    <!-- Wind Speed Unit Preference Category -->
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/category_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_temperature"
            android:drawablePadding="10dp"
            android:text="@string/temperature"
            android:textColor="@color/black" />

        <RadioGroup
            android:id="@+id/temperature_radio_group"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_kelvin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature_kelvin" />

            <RadioButton
                android:id="@+id/radio_celsius"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature_celsius" />

            <RadioButton
                android:id="@+id/radio_fahrenheit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/temperature_fahrenheit" />

            <!-- RadioButtons here -->
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/category_background"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_wind"
            android:drawablePadding="10dp"
            android:text="@string/wind_speed"
            android:textColor="@color/black" />


        <RadioGroup
            android:id="@+id/wind_speed_radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioButton
                android:id="@+id/radio_ms"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ms" />

            <RadioButton
                android:id="@+id/radio_kph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kph" />

            <RadioButton
                android:id="@+id/radio_mph"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mph" />

        </RadioGroup>
    </LinearLayout>

</LinearLayout>
